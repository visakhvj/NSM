<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    cardView:cardCornerRadius="2dp"
    cardView:contentPadding="1dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/lnrRowParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/list_sub_2"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/transcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cmtscount"
                        android:text="Unit 01:00AABB"
                        android:textColor="#006064"

                        android:textSize="10dip" />

                    <TextView
                        android:id="@+id/majoralrmcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/transcount"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/thumbnail"
                        android:elevation="6dp"
                        android:text="IP Address:192.168.1.1"
                        android:textColor="#006064"
                        android:textSize="10dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrfrmware"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/minoralrmcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/majoralrmcount"
                        android:layout_marginTop="1dip"
                        android:layout_toRightOf="@+id/thumbnail"
                        android:elevation="6dp"
                        android:text="Firmware version : 5.5.5.1"
                        android:textColor="#006064"
                        android:textSize="10dip" />


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lnrhrdware"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/title"

                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        android:text="Hardware Revision: 06"
                        android:textColor="#006064"
                        android:textSize="10dip" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnralarams"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/majoralrm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/majoralrmcount"
                        android:layout_marginTop="1dip"
                        android:elevation="6dp"
                        android:text="Major Alarms : 01"
                        android:textColor="#006064"
                        android:textSize="10dip" />

                    <TextView
                        android:id="@+id/minoralarm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/title"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="5dip"
                        android:gravity="right"
                        android:text="Minor Alarm: 02"
                        android:textColor="#006064"
                        android:textSize="10dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrSystemUpTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/systemuptime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/majoralrmcount"
                        android:layout_marginTop="1dip"
                        android:elevation="6dp"
                        android:text="System Up Time: 01 days 12 hours 30 minutes 10 seconds"
                        android:textColor="#006064"
                        android:textSize="10dip" />

                </LinearLayout>
                <!-- Rightend Duration -->


            </LinearLayout>

            <ImageView
                android:id="@+id/alarmimage"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_gravity="center"
                android:elevation="6dp"
                android:src="@drawable/transalarm"
                android:visibility="visible" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/list_sub_1"></View>
    </LinearLayout>




</android.support.v7.widget.CardView>